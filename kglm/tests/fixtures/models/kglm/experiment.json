{
    "dataset_reader": {
        "type": "enhanced-wikitext-kglm",
        "alias_database_path": "kglm/tests/fixtures/data/mini.alias.pkl"
    },
    "train_data_path": "kglm/tests/fixtures/data/enhanced-wikitext.jsonl",
    "validation_data_path": "kglm/tests/fixtures/data/enhanced-wikitext.jsonl",
    "model": {
        "type": "kglm",
        "token_embedder": {
            "token_embedders": { "tokens": {
                    "type": "embedding",
                    "embedding_dim": 10,
                    "trainable": true
                }
            }
        },
        "entity_embedder": {
            "token_embedders": {
                "entity_ids": {
                    "type": "embedding",
                    "embedding_dim": 10,
                    "trainable": true
                }
            }
        },
        "encoder": {
            "type": "lstm",
            "input_size": 10,
            "hidden_size": 10,
            "stateful": true
        },
        "embedding_dim": 10
    },
    "iterator": {
        "type": "split",
        "batch_size": 2,
        "splitter": {
            "type": "random",
            "mean_split_size": 10,
            "min_split_size": 8,
            "max_split_size": 12,
            "splitting_keys": [
                "tokens",
                "entity_identifiers",
                "shortlist_indices",
                "alias_copy_indices"
            ]
        },
        "sorting_keys": [["tokens", "num_tokens"]]
    },
    "trainer": {
        "num_epochs": 2,
        "cuda_device": -1,
        "optimizer": {
            "type": "adam",
            "lr": 3e-4
        }
    }
}
