{
    "dataset_reader": {
        "type": "enhanced-wikitext"
    },
    "train_data_path": "kglm/tests/fixtures/enhanced-wikitext.jsonl",
    "validation_data_path": "kglm/tests/fixtures/enhanced-wikitext.jsonl",
    "model": {
        "type": "awd-lstm-lm",
        "embedding_size": 5,
        "hidden_size": 7,
        "num_layers": 3
    },
    "iterator": {
        "type": "split",
        "batch_size": 2,
        "splitter": {
            "type": "fixed",
            "split_size": 10,
            "splitting_keys": ["tokens"]
        },
        "sorting_keys": [["tokens", "num_tokens"]]
    },
    "trainer": {
        "num_epochs": 2,
        "grad_clipping": 0.25,
        "optimizer": {
            "type": "sgd",
            "lr": 30.0,
            "weight_decay": 1.2e-6
        }
    }
}
