{
    "dataset_reader": {
        "type": "enhanced-wikitext-entity-nlm"
    },
    "train_data_path": "kglm/tests/fixtures/enhanced-wikitext.jsonl",
    "validation_data_path": "kglm/tests/fixtures/enhanced-wikitext.jsonl",
    "model": {
        "type": "entitydisc",
        "dropout_rate": 0.4,
        "embedding_dim": 10,
        "num_layers": 2,
        "hidden_size": 11,
        "max_embeddings": 20,
        "max_mention_length": 20,
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 10,
                    "trainable": true
                }
            }
        },
        "variational_dropout_rate": 0.1
    },
    "trainer": {
        "type": "lm",
        "cuda_device": -1,
        "num_epochs": 2,
        "optimizer": {
            "type": "adam",
            "lr": 0.0003
        }
    },
    "iterator": {
        "type": "fancy",
        "batch_size": 3,
        "split_size": 30,
        "splitting_keys": [
            "source",
            "entity_types",
            "entity_ids",
            "mention_lengths"
        ]
    }
}
